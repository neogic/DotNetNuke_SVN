<parameters>
  <parameter name="AppPath" defaultValue="Default Web Site/dotnetnuke" tags="iisapp">
    <parameterEntry type="ProviderPath" scope="iisapp" match="DotNetNuke" />
  </parameter>
  <parameter name="DbServer" defaultValue=".\SQLExpress" tags="dbServer,SQL"></parameter>
  <parameter name="DbName" defaultValue="DotNetNuke" tags="SQL,dbName">
    <parameterEntry type="TextFile" scope="installSQL.sql" match="PlaceholderForDbName" />
  </parameter>
  <parameter name="DbUsername" defaultValue="dnnuser" tags="SQL,dbUsername">
    <parameterEntry type="TextFile" scope="installSQL.sql" match="PlaceholderForDbUsername" />
  </parameter>
  <parameter name="DbPassword" tags="New, Password, SQL,dbUserPassword">
    <parameterEntry type="TextFile" scope="installSQL.sql" match="PlaceholderForDbPassword" />
  </parameter>
  <parameter name="DbAdmin" defaultValue="sa" tags="SQL,DbAdminUsername"></parameter>
  <parameter name="DbAdminPW" tags="Password, SQL, dbAdminPassword"></parameter>
  <parameter name="Connection String For Config" defaultValue="Data Source={DbServer};Database={DbName};uid={DbUsername};Pwd={DbPassword};" tags="Hidden,SQL,SQLConnectionString">
    <parameterEntry type="XmlFile" scope="\\web.config$" match="//connectionStrings/add/@connectionString" />
  </parameter>
  <parameter name="Connection String" defaultValue="Data Source={DbServer};Database={DbName};uid={DbAdmin};Pwd={DbAdminPW};" tags="Hidden,SQL,SQLConnectionString,Validate,ConnectionString">
    <parameterEntry type="ProviderPath" scope="dbfullsql" match="installSQL.sql" />
  </parameter>
  <parameter name="SetAclParameter1" defaultValue="{AppPath}" tags="Hidden">
    <parameterEntry type="ProviderPath" scope="setAcl" match="DotNetNuke" />
  </parameter>
</parameters>
